{
  "name": "email-attendant-server",
  "version": "2.0.0",
  "description": "Backend server v2.0 for Email Attendant with AI Chat Integration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "db:setup": "tsx scripts/db-setup.ts",
    "build": "tsc && echo 'Build completed successfully' && ls -la dist/",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "setup": "tsx setup.ts",
    "postbuild": "echo 'Post-build: Checking compiled files' && ls -la dist/utils/ && ls -la dist/services/"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^129.0.0",
    "inquirer": "^12.9.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.20.4",
    "typescript": "^5.3.2"
  }
}
